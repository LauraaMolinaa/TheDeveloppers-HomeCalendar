<Window x:Class="HomeCalendarGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeCalendarGUI"
        mc:Ignorable="d"

        Title="MainWindow" Height="700" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Home Calendar Application" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Padding="10" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Margin="10">
            <GroupBox Header="Category Management">
                <StackPanel Margin="10">
                    <TextBlock Text="Description:" FontWeight="Bold"/>
                    <TextBox x:Name="DescriptionBox" Height="30" Margin="0,5"/>
                    <TextBlock Text="Event Type:" FontWeight="Bold"/>
                    <ComboBox x:Name="cmbEventTypes" Height="30" Margin="0,5"/>
                    <Button Content="Add Category" Click="Button_ClickAddCategory" Margin="0,10" Width="100"/>
                </StackPanel>
            </GroupBox>
            <TextBlock x:Name="message" FontWeight="Bold"/>
            <GroupBox Header="Event Management">
                <StackPanel Margin="10">
                    <TextBlock Text="Event Description:" FontWeight="Bold"/>
                    <TextBox x:Name="EventDescriptionBox" Height="30" Margin="0,5"/>
                    <TextBlock Text="Start Date:" Margin="0,5,0,0" FontWeight="Bold"/>
                    <DatePicker x:Name="StartDate" />

                    <TextBlock Text="End Date:" Margin="0,5,0,0" FontWeight="Bold"/>
                    <DatePicker x:Name="EndDate" />
                    <TextBlock Margin="0,5,0,0" FontWeight="Bold">Enter a duration in minutes for this event:</TextBlock>
                    <TextBox x:Name="EndTime"></TextBox>

                    <TextBlock Text="Available Categories:" Margin="0,5,0,0" FontWeight="Bold"></TextBlock>
                    <ComboBox x:Name="catsComboBox" MaxDropDownHeight="100" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Row="1" Grid.Column="2" Margin="0.5,15,0.5,0.5" Text="Categories" DisplayMemberPath="Description"/>
                    <Button Content="Add Event" Click="Button_ClickAddEvent" Margin="0,10" Width="100"/>
                    <Button Content="Cancel Event" Click="Button_ClickCancelEvent" Margin="0,10" Width="100"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Settings">
                <Button Click="Btn_SaveCalendarFileTo" Grid.Row="2" Margin="10" Width="130" HorizontalAlignment="Center" Background="Azure">
                    <TextBlock TextAlignment="Center">Change Calendar File <LineBreak/> Location</TextBlock>
                </Button>
            </GroupBox>
        </StackPanel>

        <Button Content="Close Application" Click="CloseApplication" Grid.Row="2"
                HorizontalAlignment="Right" Margin="10" Width="200"
        />
    </Grid>
</Window>