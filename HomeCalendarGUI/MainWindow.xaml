<Window x:Class="HomeCalendarGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeCalendarGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800">
    <Grid SizeChanged="Grid_SizeChanged">
        <!--Retrieved from https://themepack.me/theme/summer-flowers/-->
        <Grid.Background>
            <ImageBrush ImageSource="images/AppBackground.jpg"></ImageBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Home Calendar Application" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Left" TextAlignment="Center" Padding="10" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="264,0,0,0" Foreground="AliceBlue"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <StackPanel Grid.Row="1" Margin="10">
                <GroupBox Header="Category Management" Foreground="AliceBlue">
                    <StackPanel Margin="10">
                        <TextBlock Text="Description:" FontWeight="Bold"/>
                        <TextBox x:Name="DescriptionBox" Height="30" Margin="0,5"/>
                        <TextBlock Text="Event Type:" FontWeight="Bold"/>
                        <ComboBox x:Name="cmbEventTypes" Height="30" Margin="0,5" BorderBrush="OrangeRed" BorderThickness="4" FontFamily="Comfortaa"/>
                        <Button Content="Add Category" Click="Button_ClickAddCategory" Margin="0,10" Width="100" FontFamily="Comfortaa" FontWeight="DemiBold" BorderBrush="Red" Background="#FFCCCCED" Foreground="Brown"/>
                    </StackPanel>
                </GroupBox>
                <TextBlock x:Name="message" FontWeight="Bold"/>
                <GroupBox Header="Event Management" Foreground="AliceBlue">
                    <StackPanel Margin="10">
                        <TextBlock Text="Event Description:" FontWeight="Bold"/>
                        <TextBox x:Name="EventDescriptionBox" Height="30" Margin="0,5"/>
                        <TextBlock Text="Start Date:" Margin="0,5,0,0" FontWeight="Bold"/>
                        <DatePicker x:Name="StartDate" />
                        <TextBlock Text="End Date:" Margin="0,5,0,0" FontWeight="Bold"/>
                        <DatePicker x:Name="EndDate" />
                        <TextBlock Margin="0,5,0,0" FontWeight="Bold">Enter a duration in minutes for this event:</TextBlock>
                        <TextBox x:Name="EndTime"></TextBox>

                        <TextBlock Text="Available Categories:" Margin="0,5,0,0" FontWeight="Bold"></TextBlock>
                        <ComboBox x:Name="catsComboBox" FontFamily="Comfortaa" BorderBrush="Red" BorderThickness="2" MaxDropDownHeight="100" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Row="1" Grid.Column="2" Margin="0.5,15,0.5,0.5" Text="Categories" DisplayMemberPath="Description"/>
                        <Button Content="Add Event" FontFamily="Comfortaa" FontWeight="DemiBold" BorderBrush="Red" Background="#FFCCCCED" Foreground="Brown" Click="Button_ClickAddEvent" Margin="0,10" Width="100"/>
                        <Button Content="Cancel Event" Click="Button_ClickCancelEvent" FontFamily="Comfortaa" FontWeight="DemiBold" BorderBrush="Red" Background="#FFCCCCED" Foreground="Brown" Margin="0,10" Width="100"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Header="Settings" Foreground="AliceBlue">
                    <Button Click="Btn_SaveCalendarFileTo" Grid.Row="2" Margin="10" Width="130" HorizontalAlignment="Center" FontFamily="Comfortaa" FontWeight="DemiBold" BorderBrush="Red" Background="#FFCCCCED" Foreground="Brown">
                        <TextBlock TextAlignment="Center">Change Calendar File <LineBreak/> Location</TextBlock>
                    </Button>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Grid.Row="1" Grid.Column="1">
            <WrapPanel>
                <CheckBox x:Name="DateFilterCheckBox" Click="DateFilterCheckBoxClick" Foreground="AliceBlue" FontWeight="DemiBold" FontFamily="Comfortaa">Filter by Date Range</CheckBox>
                <DatePicker x:Name="Start" Margin="5,0,0,0" FontWeight="DemiBold" FontFamily="Comfortaa"/>
                <DatePicker x:Name="End" Margin="5,0,0,0" FontWeight="DemiBold" FontFamily="Comfortaa"/>
            </WrapPanel>
        </StackPanel>

        <DataGrid x:Name="CalendarItemsDataGrid" Grid.Column="1" Margin="10,40,10,10" Grid.Row="1" Width="390" AutoGenerateColumns="False" Background="LightBlue" Foreground="Brown" FontWeight="DemiBold" FontFamily="Comfortaa" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Start Date" Binding="{Binding StartDateTime, StringFormat=\{0:yyyy/MM/dd\}}"/>
                <DataGridTextColumn Header="Start Time" Binding="{Binding StartDateTime, StringFormat=\{0:hh:mm:ss\}}"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}"/>
                <DataGridTextColumn Header="Description" Binding="{Binding ShortDescription}"/>
                <DataGridTextColumn Header="Duration" Binding="{Binding DurationInMinutes}"/>
                <DataGridTextColumn Header="Busy Time" Binding="{Binding BusyTime}"/>
            </DataGrid.Columns>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="DeleteEvent" Header="Delete"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

        <Button Content="Close Application" Click="CloseApplication" Grid.Row="2"
                HorizontalAlignment="Right" Margin="10" Width="200" FontFamily="Comfortaa" FontWeight="DemiBold" BorderBrush="Red" Background="#FFCCCCED" Foreground="Brown"
        />
    </Grid>
</Window>