<Window x:Class="HomeCalendarGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeCalendarGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Grid.ColumnSpan="3" TextAlignment="Center" FontFamily="Times New Roman" FontWeight="Bold" FontSize="40">Welcome To Your Home Calendar App</TextBlock>

        <Button Grid.Column="0" Grid.Row="1" Margin="50" Background="Green" FontSize="25">New Event</Button>
        
                
        <Button Click="Btn_SaveCalendarFileTo" Grid.Column="0" Grid.Row="2" Margin="50" Background="Azure">
            <TextBlock TextAlignment="Center">Change Calendar File Directory <LineBreak/>
            Location</TextBlock>
        </Button>
        <ComboBox x:Name="catsComboBox" MaxDropDownHeight="100" ScrollViewer.VerticalScrollBarVisibility="Visible" Grid.Row="1" Grid.Column="2" Margin="55,60,55,50" Text="Categories" DisplayMemberPath="Description"/>
        
        
    </Grid>
</Window>
