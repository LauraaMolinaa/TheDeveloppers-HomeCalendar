<Window x:Class="HomeCalendarGUI.OpenFileWindowOnInitialization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeCalendarGUI"
        mc:Ignorable="d"
        Background="Black"
        Title="OpenFileWindowOnInitialization" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>            
        </Grid.ColumnDefinitions>
        <TextBlock Text="Please select indicated options below" Foreground="WhiteSmoke" Grid.ColumnSpan="2" TextAlignment="Center" FontSize="30"></TextBlock>

        <Button Click="Btn_Use_Default_File" Grid.Row="1" Grid.Column="0" Margin="50" BorderBrush="Red" Background="Salmon" FontSize="20">Use default calendar file</Button>
        <Button Click="Btn_Use_Specific_File" Grid.Row="1" Grid.Column="1" Margin="50" BorderBrush="Yellow" Background="Navy" Foreground="AntiqueWhite" FontSize="20">Use specific calendar file</Button>

    </Grid>
</Window>
