<Window x:Class="HomeCalendarGUI.Events"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeCalendarGUI"
        mc:Ignorable="d"
        Title="Events" Height="600" Width="600">
    <Grid>
        <StackPanel Margin="15">
            <TextBlock FontWeight="Bold">Choose a start date and time for your event</TextBlock>
            <DatePicker Name="StartDate" SelectedDateFormat="Long" FirstDayOfWeek="Monday"></DatePicker>
            <DatePicker Name="StartTime"></DatePicker>
            
            <TextBlock FontWeight="Bold" Margin="0,20,0,0">Choose an end date and time for your event</TextBlock>
            <DatePicker Name="EndDate" SelectedDateFormat="Long" FirstDayOfWeek="Monday"></DatePicker>
            <DatePicker Name="EndTime" SelectedDateFormat="Long"></DatePicker>
            
            <TextBlock FontWeight="Bold" Margin="0,20,0,0">Choose a category</TextBlock>
            <ComboBox x:Name="cmbCategory"></ComboBox>    
        </StackPanel>
        
    </Grid>
</Window>
