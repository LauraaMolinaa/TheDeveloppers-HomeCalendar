<Window x:Class="HomeCalendarGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeCalendarGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <Label>Create a new Category</Label>
        <StackPanel Margin="0,50,0,50"  HorizontalAlignment="Center" Width="500">
            <TextBlock x:Name="DescriptionBox" FontWeight="Bold" FontSize="20">Description</TextBlock>
            <TextBox Height="50" Margin="0,0,0,30"></TextBox>

            <TextBlock FontWeight="Bold" FontSize="20">Event type</TextBlock>
            <ComboBox x:Name="cmbEventTypes"></ComboBox>

            <Button Margin="0,20" Width="50" HorizontalAlignment="Left" Click="Button_ClickAddCategory">Done</Button>
            <TextBlock x:Name="message" Margin="0,15,15,0" FontWeight="Bold" FontSize="15"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
